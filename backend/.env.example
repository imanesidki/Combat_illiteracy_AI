# Environment Variables for Moroccan Literacy App Backend
# This is a sample environment file. Copy this to .env and fill in your actual values.

# Required API Keys
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Model Configuration
WHISPER_MODEL=medium

# File Upload Limits (in MB)
MAX_FILE_SIZE=50
